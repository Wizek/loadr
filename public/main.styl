$base-text-color = fade-out(black, 0.25)

body
  font 16pt Helvetica
  margin 0
  color $base-text-color

.logo
  color rgba(0,0,0,.5)
  margin-top 0
  .from
  .version
    color rgba(0,0,0,.25)

.links
  padding 0
  &, & ul
    list-style-type none
  & ul
    padding-left 1em


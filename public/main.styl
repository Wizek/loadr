a
  color rgba(0,0,0, .5)
  // background fade-out(black, 0.9)
  // font-weight 900
  text-decoration: none
  &:active
    color black
    // font-weight 900
    text-decoration: none
  &:hover
    text-decoration: underline
  &:visited
    color rgba(0,0,0, .5)
    background yellow
    // display: none

.side-bar
  width: 200px;
  position: absolute;
  top: 0;
  bottom: 0;
  overflow: auto;
  padding: 30px 0 30px 30px;
.content
  font 12pt Helvetica
  position: absolute;
  left: 230px;
  top: 0;
  bottom: 0;
  right 0
  overflow: auto;
  padding: 30px;
.content-fixwidth
  width: 700px
iframe
  width: 800px
  height 100%
  border none

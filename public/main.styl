$base-text-color = fade-out(black, 0.25)

closest(k, n)
  round(n / k) * k

c(n)
  closest(12, n)

body
  font 16pt Helvetica
  margin 0
  color $base-text-color

.logo
  color rgba(0,0,0,.5)
  margin-top 0
  .from
  .version
    color rgba(0,0,0,.25)

.links
  padding 0
  &, & ul
    list-style-type none
  & ul
    padding-left 1em

// alink    {colorblue}
// alinkvisited {colorgreen}
// ahover   {colorred}
// aactive  {coloryellow}

a
  color rgba(0,0,0, .5)
  // background fade-out(black, 0.9)
  // font-weight 900
  text-decoration none
  &:active
    color black
    // font-weight 900
    text-decoration none
  &:hover
    text-decoration underline
  &:visited
    color rgba(0,0,0, .5)
    background yellow
    // display none

.side-bar
  width c(215px)
  position absolute
  top 0
  bottom 0
  overflow auto
  padding 30px 0 30px 30px
.content
  font 12pt Helvetica
  position absolute
  left 230px
  top 0
  bottom 0
  right 0
  overflow auto
  padding 30px
.content-fixwidth
  max-width 800px
li:last-child
  // margin-bottom 1ex
  padding-bottom 1ex

